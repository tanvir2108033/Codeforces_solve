#include<iostream>
using namespace std;
 
int main()
{
    int m,n;
    cin>>m>>n;
    if(m >= 1 && m <= n && 16 >= n)
    {
        if((m*n) % 2 ==0)
        {
            cout<<(m*n)/2;
        }
        else if (((m*n) % 2) !=0)
        {
            cout<<(((m*n)-1) / 2);
        }
    }
    
    return 0;
}
