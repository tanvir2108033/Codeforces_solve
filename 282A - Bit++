#include <iostream>
using namespace std;
int main() {
    int n , i , x = 0 , cnt = 0;
    string s;
    cin>>n;
    for(i = 0; i < n ; i++)
    {
        cin>>s;
        if(s == "X++" || s == "++X")
        {
            cnt++;
        }
        else if(s == "X--" || s == "--X")
        {
            cnt--;
        }
    }
    cout<<cnt;
    return 0;
}
