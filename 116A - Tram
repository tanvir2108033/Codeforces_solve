#include <iostream>
using namespace std;
 
int main() {
    int i, n, a, b, curr = 0, capacity = 0;
    cin >> n;
    for(i = 1; i <= n; i++)
    {
        cin>>a>>b;
        curr = curr - a ;
        curr = curr + b ;
        if(curr > capacity)
        {
            capacity = curr ;
        }
    }
    cout << capacity << endl;
    
    return 0;
}
